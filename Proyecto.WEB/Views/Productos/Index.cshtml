@model IEnumerable<Proyecto.WEB.Models.ViewModels.ProductoViewModel>

@{
    ViewData["Title"] = "Lista de Productos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio Compra</th>
            <th>Precio Venta</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Codigo de Barras</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.PrecioCompra.ToString("C")</td>
                <td>@item.PrecioVenta.ToString("C")</td>
                <td>@item.Stock</td>
                <td>@item.NombreCategoria</td>
                <td>@item.CodigoBarras</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
