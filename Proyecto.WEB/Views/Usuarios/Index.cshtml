@model IEnumerable<Proyecto.WEB.Models.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Lista de Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Usuario</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Fecha de Creación</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Usuario1</td>
                <td>@item.NombreRol</td>
                <td>@item.FechaCreacion?.ToString("yyyy-MM-dd")</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
