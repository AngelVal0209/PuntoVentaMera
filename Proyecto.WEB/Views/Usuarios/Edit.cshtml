@model Proyecto.WEB.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdUsuario" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario1"></label>
        <input asp-for="Usuario1" class="form-control" />
        <span asp-validation-for="Usuario1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" class="form-control" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdRol"></label>
        <input asp-for="IdRol" class="form-control" />
        <span asp-validation-for="IdRol" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
