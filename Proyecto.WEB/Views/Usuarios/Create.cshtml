@model Proyecto.WEB.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario1" class="control-label"></label>
        <input asp-for="Usuario1" class="form-control" />
        <span asp-validation-for="Usuario1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Clave" class="control-label"></label>
        <input asp-for="Clave" class="form-control" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdRol" class="control-label"></label>
        <input asp-for="IdRol" class="form-control" />
        <span asp-validation-for="IdRol" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
