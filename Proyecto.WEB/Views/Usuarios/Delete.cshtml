@model Proyecto.WEB.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<h4>¿Seguro que deseas eliminar este usuario?</h4>

<div class="card p-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Usuario:</strong> @Model.Usuario1</p>
    <p><strong>Rol:</strong> @Model.NombreRol</p>
    <p><strong>Fecha de creación:</strong> @Model.FechaCreacion?.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdUsuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
